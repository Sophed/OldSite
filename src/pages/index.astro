---
import Status from '../components/Status.astro';
import Layout from '../layouts/Layout.astro';
import Pill from '../components/Pill.astro';
import Bar from '../components/Bar.astro';
import Icon from 'astro-icon'
// ❤️
---



<Layout title="Soph.systems">
	<main>

		<h1 class="text-6xl font-semibold">&lt;/&gt;<b class="font-bold">Sophed</b></h1>
		<Status bg="#66FF99" />

		<div style="display: flex" id="pills">
			<Pill href="https://github.com/Sophed/" iconpack="mdi" icon="github" text="GitHub" bg="#1B1B1B" id=""/>
			<Pill href="#" iconpack="ic" icon="baseline-discord" text="Discord" bg="#404EED" id=""/>
			<Pill href="#" iconpack="mdi" icon="spotify" text="Loading..." bg="#1ED760" id="spotifytxt"/>
		</div>

		<Bar width="64rem" />

		<div>
			<h2 class="text-4xl font-bold">Full-Stack Developer & Security Analyst</h2>
			<p class="text-2xl">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</p>
		</div>

		<Icon pack="mdi" name="keyboard-arrow-down"/>

	</main>
</Layout>



<style>
	h1 {
		letter-spacing: 0.1em;
		width: fit-content;
		padding-right: 1em;
	}
	h2 {
		letter-spacing: 0.02em;
		padding-right: 2em;
		width: fit-content;
	}
	b {
		letter-spacing: 0.03em;
		margin-left: 0.2em;
	}
	p {
		padding-top: 0.2em;
		max-width: 60%;
	} @media (max-width: 980px) {
		p {
			max-width: 80%;
		}
	}
	svg {
		height: 86px;
		margin: 1.4em;
	}
	@media (max-width: 1318px) {
		#pills {
			flex-direction: column;
		}
	}
</style>
