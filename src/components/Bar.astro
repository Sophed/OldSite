---
export interface Props {
	width: string;
}

const width = Astro.props.width || '100px';
---
<div />

<style define:vars={{ width }}>
	div {
		max-width: var(--width);
		margin-right: 10rem;
        background-color: white;
        height: 0.3em;
        border-radius: 1em;
        margin: 1.6em 0;
	} @media (max-width: 1364px) {
		div {
            width: 80%;
            min-width: 20rem;
        }
	}
</style>
